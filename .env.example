# AI API Configuration
# 优先使用 Gemini API (推荐)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_MODEL=gemini-2.5-pro

# DeepSeek API (备用)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# QuickPlacement v1 功能开关
FEATURE_QUICK_PLACEMENT=true                    # 快测功能总开关
FEATURE_PLACEMENT_SHADOW_MODE=false             # 影子模式（A/B测试）
FEATURE_PLACEMENT_FUSION=true                   # 自评融合功能

# QuickPlacement v1 配置
PLACEMENT_OBJECTIVE_WEIGHT=0.7                  # 客观题权重
PLACEMENT_SELF_WEIGHT=0.3                       # 自评权重
PLACEMENT_TIME_LIMIT_SECONDS=180                # 时间限制（秒）
PLACEMENT_QUESTION_COUNT=10                     # 题目数量

# 应用配置
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 国际化
NEXT_PUBLIC_DEFAULT_LOCALE=zh
NEXT_PUBLIC_SUPPORTED_LOCALES=zh,en,ar

# 调试和日志
DEBUG_PLACEMENT=false                          # 快测调试模式
LOG_API_REQUESTS=true                          # API请求日志